<div class="login py-16">
<section class="conatiner mx-auto text-center flex justify-center pt-24">
    <div class="w-full max-w-md">
      
        <form action="/login" method="POST" class="bg-white drop-shadow-lg rounded px-8 pt-6 pb-6 mb-4">
          <div class="mb-6">
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign in to your account</h2>
          </div>
            <div class="mb-4">
                <label class="text-start block text-gray-700 text-base font-bold mb-2" for="username">
                    Email
                </label>
                <input name="email"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="username" type="email" placeholder="Enter your email">
            </div>
            <div class="mb-6">
                <label class="text-start block text-gray-700 text-base font-bold mb-2" for="password">
                    Password
                </label>
                <input name="password"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password" type="password" placeholder="Password">
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="btn-secondary rounded-full font-bold py-2 px-4 focus:outline-none focus:shadow-outline"
                    type="submit">
                    Log In
                </button>
                <a class="inline-block align-baseline font-bold text-sm" href="/register">
                    Don't have account?
                </a>
            </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
            &copy;2023 Pizza Application. All rights reserved.
        </p>
    </div>
</section>
